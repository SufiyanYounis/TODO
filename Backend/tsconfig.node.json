{
  "compilerOptions": {
    "target": "ES2022",                        
    "lib": ["ES2022"],                         
    "module": "CommonJS",                      
    "moduleResolution": "Node",                
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "strict": true,                            
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",                        
    "rootDir": ".",                            
    "types": ["node", "express"]               
  },
  "include": ["server.ts", "src/**/*", "Controllers/**/*", "Routes/**/*", "Models/**/*"],
  "exclude": ["node_modules"]
}
