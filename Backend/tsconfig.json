{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["config/*"],
      "@Models/*": ["Models/*"],
      "@Controllers/*": ["Controllers/*"],
      "@Routes/*": ["Routes/*"]
    }
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
